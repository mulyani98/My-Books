<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="85dp"
                android:id="@+id/cover_cerpen"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher"
                android:layout_marginTop="5dp"/>
            <TextView
                android:layout_width="100dp"
                android:id="@+id/harga_cerpen"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cover_cerpen"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="16dp" />
            <!--Layout Text Template-->
            <TextView
                android:id="@+id/tvJnsCerpen"
                android:layout_toRightOf="@+id/cover_cerpen"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kategori     : "
                android:textColor="#000"/>

            <TextView
                android:id="@+id/tvTahun"
                android:layout_toRightOf="@+id/cover_cerpen"
                android:layout_below="@+id/tvJnsCerpen"
                android:layout_marginLeft="10dp"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tahun         : "
                android:textColor="#000"/>

            <TextView
                android:id="@+id/tvSinopsis"
                android:layout_toRightOf="@+id/cover_cerpen"
                android:layout_below="@id/tvTahun"
                android:layout_marginLeft="10dp"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sinopsis     : "
                android:textColor="#000"/>

            <!-- Layout Get Data-->
            <TextView
                android:id="@+id/judul_cerpen"
                android:layout_toRightOf="@+id/cover_cerpen"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textStyle="bold"
                android:text="Judul"
                android:gravity="center"
                android:textColor="#000"

                />

            <TextView
                android:id="@+id/jenis_buku"
                android:layout_toRightOf="@+id/tvJnsCerpen"
                android:layout_marginTop="20dp"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/thnTerbit"
                android:layout_toRightOf="@+id/tvTahun"
                android:layout_below="@+id/tvJnsCerpen"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/sinopsis"
                android:layout_toRightOf="@+id/cover_cerpen"
                android:layout_below="@+id/tvSinopsis"
                android:layout_marginLeft="10dp"
                android:textSize="15sp"
                android:lines="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/colorPrimary"/>

    </LinearLayout>
</LinearLayout>